<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.add.AddTodoActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/todoDescription" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounder_border_rectangle"
            android:contentDescription="Todo Description" android:hint="Todo"/>
    <Button
            android:text="Add Todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddTodo" app:layout_constraintEnd_toEndOf="@+id/todoDescription"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounder_border_rectangle"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/todoDescription"
            app:layout_constraintStart_toStartOf="@+id/todoDescription" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>